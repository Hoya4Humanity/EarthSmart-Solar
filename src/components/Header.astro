---
import CTAButton from './CTAButton.astro';

const site = Astro.site ?? new URL('http://localhost');
const navLinks = [
  { href: new URL('/', site).pathname, label: 'Home' },
  { href: new URL('/solar-battery', site).pathname, label: 'Solar + Battery' },
  { href: new URL('/why-earthsmart', site).pathname, label: 'Why EarthSmart' },
  { href: new URL('/texas', site).pathname, label: 'Texas' },
  { href: new URL('/contact', site).pathname, label: 'Contact' },
];
---
<header class="bg-brand-white/70 backdrop-blur sticky top-0 z-30 border-b border-texas-gold/40">
  <div class="container-shell flex items-center justify-between py-4">
    <a href={new URL('/', site).pathname} class="flex items-center gap-2 font-display text-xl tracking-wide text-solar-blue">
      <span>EarthSmart Solar</span>
    </a>
    <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
      {navLinks.map((link) => (
        <a class="hover:text-texas-gold" href={link.href} key={link.href}>
          {link.label}
        </a>
      ))}
    </nav>
    <div class="flex items-center gap-3">
      <CTAButton href="/contact" variant="primary">Get Report</CTAButton>
    </div>
  </div>
</header>
