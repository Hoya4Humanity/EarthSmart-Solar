---
const site = Astro.site ?? new URL('http://localhost');
---
<footer class="bg-solar-blue text-brand-white mt-16">
  <div class="container-shell py-10 grid gap-8 md:grid-cols-3">
    <div>
      <p class="font-display text-2xl">Storing your power. Securing your independence.</p>
      <a class="underline mt-3 inline-block" href={new URL('/', site).pathname}>EarthSmartSolar.com</a>
    </div>
    <div>
      <p class="font-semibold mb-2">Service Areas</p>
      <ul class="space-y-1 text-sm text-sand/80">
        <li>Greater Houston</li>
        <li>Central Texas</li>
        <li>DFW Metro</li>
      </ul>
    </div>
    <div>
      <p class="font-semibold mb-2">Contact</p>
      <p class="text-sm text-sand/80">Phone: (000) 000-0000</p>
      <p class="text-sm text-sand/80">Email: hello@earthsmartsolar.com</p>
      <p class="text-sm text-sand/80 mt-2">Family-owned. Licensed & insured.</p>
    </div>
  </div>
</footer>
